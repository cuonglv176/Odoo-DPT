<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="view_dpt_pricelist_reject_wizard_form" model="ir.ui.view">
        <field name="name">dpt.pricelist.reject.wizard.form</field>
        <field name="model">dpt.pricelist.reject.wizard</field>
        <field name="arch" type="xml">
            <form string="Từ chối phê duyệt">
                <group>
                    <field name="pricelist_id" invisible="1"/>
                    <field name="reason" placeholder="Nhập lý do từ chối..." required="1"/>
                </group>
                <footer>
                    <button string="Xác nhận" name="action_confirm" type="object" class="btn-primary"/>
                    <button string="Hủy" class="btn-secondary" special="cancel"/>
                </footer>
            </form>
        </field>
    </record>
</odoo>