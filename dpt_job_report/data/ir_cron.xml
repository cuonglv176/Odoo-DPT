<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data noupdate="1">
        <!-- Cron job để tự động cập nhật trạng thái công việc hệ thống -->
        <record id="ir_cron_auto_update_system_tasks" model="ir.cron">
            <field name="name">Job Report: Update System Tasks Status</field>
            <field name="model_id" ref="model_dpt_system_task"/>
            <field name="state">code</field>
            <field name="code">model.auto_update_status()</field>
            <field name="interval_number">1</field>
            <field name="interval_type">hours</field>
            <field name="numbercall">-1</field>
            <field name="doall" eval="False"/>
            <field name="active" eval="True"/>
        </record>
        <!-- Cron job tạo báo cáo hàng tháng -->
        <record id="ir_cron_create_monthly_job_reports" model="ir.cron">
            <field name="name">Tạo báo cáo công việc hàng tháng</field>
            <field name="model_id" ref="model_dpt_job_report"/>
            <field name="state">code</field>
            <field name="code">model._create_monthly_reports()</field>
            <field name="interval_number">1</field>
            <field name="interval_type">days</field>
            <field name="numbercall">-1</field>
            <field name="nextcall" eval="(DateTime.now().replace(hour=1, minute=0, second=0) + timedelta(days=1)).strftime('%Y-%m-%d %H:%M:%S')"/>
            <field name="doall" eval="False"/>
            <field name="active" eval="True"/>
        </record>
    </data>
</odoo> 