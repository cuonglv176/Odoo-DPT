<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data noupdate="1">
        <!-- Đặt dashboard là view mặc định khi mở module Project -->
        <record id="project.menu_main_pm" model="ir.ui.menu">
            <field name="action" ref="dpt_project_task.action_task_management_dashboard"/>
        </record>
        
        <!-- Tạo dự án mặc định -->
        <record id="default_project" model="project.project">
            <field name="name">Mặc định</field>
            <field name="description">Dự án mặc định cho các công việc được tạo từ bảng điều khiển</field>
            <field name="active" eval="True"/>
            <field name="user_id" ref="base.user_admin"/>
            <field name="privacy_visibility">portal</field>
        </record>
    </data>
</odoo> 