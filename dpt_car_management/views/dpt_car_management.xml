<?xml version="1.0" encoding="UTF-8" ?>
<odoo>
    <record id="view_car_form" model="ir.ui.view">
        <field name="name">car.form</field>
        <field name="model">dpt.car.management</field>
        <field name="arch" type="xml">
            <form string="Car Form">
                <sheet>
                    <label for="name"/>
                    <h1>
                        <field name="name" placeholder="e.g .Household purchasing service"/>
                    </h1>
                    <group>
                        <group string="Car Information">
                            <field name="car_type"/>
                            <field name="car_code"/>
                            <field name="car_register_code"/>
                        </group>
                        <group string="Drive Information">
                            <field name="driver_name"/>
                            <field name="driver_phone"/>
                            <field name="image"/>
                        </group>
                    </group>
                    <notebook>
                        <page name="cars_tracking" string="Cars Tracking">
                            <field name="tracking_ids"/>
                        </page>
                    </notebook>
                </sheet>
                <div class="oe_chatter">
                    <field name="message_follower_ids"/>
                    <field name="activity_ids"/>
                    <field name="message_ids"/>
                </div>
            </form>
        </field>
    </record>

    <record id="view_car_tree" model="ir.ui.view">
        <field name="name">car.tree</field>
        <field name="model">dpt.car.management</field>
        <field name="arch" type="xml">
            <tree string="Cars">
                <field name="name"/>
                <field name="car_type"/>
                <field name="car_code"/>
                <field name="car_register_code"/>
                <field name="driver_name"/>
                <field name="driver_phone"/>
            </tree>
        </field>
    </record>

    <record id="action_car_management" model="ir.actions.act_window">
        <field name="name">Cars</field>
        <field name="res_model">dpt.car.management</field>
        <field name="view_mode">tree,form</field>
    </record>


    <menuitem id="car_management_menu" name="Cars" parent="stock.menu_warehouse_config" action="action_car_management"
              sequence="15"/>
</odoo>
