<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <record id="view_dpt_currency_management_form" model="ir.ui.view">
            <field name="name">res.currency.dpt.form</field>
            <field name="model">res.currency</field>
            <field name="inherit_id" ref="base.view_currency_form"/>
            <field name="arch" type="xml">
                <xpath expr="//field[@name='full_name']" position="after">
                    <field name="category" widget="radio"/>
                    <field name="category_code"/>
                </xpath>
            </field>
        </record>
    </data>
</odoo>