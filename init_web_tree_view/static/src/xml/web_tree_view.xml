<?xml version="1.0" encoding="UTF-8"?>
<templates xml:space="preserve">

<t t-name="init_web_tree_view.TreeView" owl="1">
    <Layout className="'o_init_tree_view'" display="props.display">
        <t t-component="props.Renderer" t-props="rendererProps" />
    </Layout>
</t>

<t t-name="init_web_tree_view.TreeController" owl="1">
    <div class="o_tree_controller" />
</t>

<t t-name="init_web_tree_view.TreeRenderer" owl="1">
    <div class="o_tree_renderer" t-ref="root">
        <select t-if="props.arch.attrs and props.arch.attrs.toolbar" style="width: 30%"/>
        <table class="o_treeview_table">
            <thead>
                <tr>
                    <th t-foreach="props.arch.children" t-as="field" t-key="field.attrs.name"
                        class="treeview-header">
                        <t t-esc="field.attrs.string || props.fields[field.attrs.name].string" />
                    </th>
                </tr>
            </thead>
            <tbody>
                <!-- Rows will be dynamically inserted here -->
            </tbody>
        </table>
    </div>
</t>

</templates>