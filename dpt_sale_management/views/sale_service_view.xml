<?xml version="1.0" encoding="utf-8" ?>
<odoo>
    <record id="view_sale_order_inherit_form" model="ir.ui.view">
        <field name="name">sale.order.inherit</field>
        <field name="model">sale.order</field>
        <field name="inherit_id" ref="sale.view_order_form"/>
        <field name="arch" type="xml">
            <button name="action_quotation_send" position="before">
                <button string="Send Quotation Department" name="send_quotation_department" type="object"/>
                <button string="Change Price" name="action_change_price" type="object"/>
            </button>
            <button name="action_quotation_send" position="attributes">
                <attribute name="invisible">1</attribute>
            </button>
            <button name="action_preview_sale_order" position="attributes">
                <attribute name="invisible">1</attribute>
            </button>
<!--            <button name="action_cancel" position="replace"/>-->
            <page name="order_lines" position="before">
                <page name="sale_service" string="Service">
                    <field name="sale_service_ids">
                        <tree editable="bottom">
<!--                            <field name="sale_id" invisible="1"/>-->
                            <field name="sequence" widget="handle"/>
                            <field name="service_id"/>
                            <field name="description"/>
                            <field name="qty" readonly="1" force_save="1"/>
                            <field name="uom_id"/>
                            <field name="price" readonly="1" force_save="1"/>
<!--                            <field name="currency_id" invisible="1"/>-->
                            <field name="department_id"/>
                            <field name="amount_total" readonly="1" force_save="1"/>
                            <field name="status"/>
                            <button string="Tính giá" name="action_calculation" type="object" style="background-color: purple, color: white"/>
                        </tree>
                    </field>
                    <group col="6" class="mt-2 mt-md-0">
                        <group class="oe_subtotal_footer" colspan="2">
                            <field name="service_total_untax_amount" colspan="2" readonly="1"/>
                            <field name="service_tax_amount" colspan="2" readonly="1"/>
                            <field name="service_total_amount" colspan="2" readonly="1"/>
                        </group>
                        <div class="clearfix"/>
                    </group>
                </page>
            </page>
        </field>
    </record>

    <record id="view_sale_change_price_form" model="ir.ui.view">
        <field name="name">dpt.sale.change.price</field>
        <field name="model">dpt.sale.change.price</field>
        <field name="arch" type="xml">
            <form string="Change Price">
                <notebook>
                    <page string="Service">
                        <field name="service_ids">
                            <tree editable="bottom">
                                <field name="service_id"/>
                                <field name="qty"/>
                                <field name="price"/>
                                <field name="change_price"/>
                                <field name="amount_total"/>
                            </tree>
                        </field>
                    </page>
                    <page string="Product">
                        <field name="product_ids">
                            <tree editable="bottom">
                                <field name="product_id"/>
                                <field name="qty"/>
                                <field name="price"/>
                                <field name="change_price"/>
                                <field name="amount_total"/>
                            </tree>
                        </field>
                    </page>
                </notebook>
                <footer>
                    <button string="Send" name="send_request" type="object" class="btn-primary"/>
                    <button string="Cancel" class="btn-secondary" special="cancel"/>
                </footer>
            </form>
        </field>
    </record>
</odoo>
