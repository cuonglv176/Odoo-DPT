<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data noupdate="1">

        <!-- Cron job kiểm tra tiền chuyển quá hạn -->
        <record id="ir_cron_check_overdue_transfers" model="ir.cron">
            <field name="name">Kiểm tra tiền chuyển quá hạn</field>
            <field name="model_id" ref="model_dpt_pending_transfer"/>
            <field name="state">code</field>
            <field name="code">model.check_overdue_transfers()</field>
            <field name="interval_number">1</field>
            <field name="interval_type">days</field>
            <field name="numbercall">-1</field>
            <field name="active">True</field>
            <field name="user_id" ref="base.user_root"/>
        </record>

    </data>
</odoo>
