<?xml version="1.0" encoding="utf-8" ?>
<odoo>

    <record id="dpt_create_account_expense_wizard_form" model="ir.ui.view">
        <field name="name">dpt_create_account_expense_wizard_form</field>
        <field name="model">dpt.create.account.expense.wizard</field>
        <field name="arch" type="xml">
            <form string="Xác nhận tạo hóa đơn">
                <group string="Information">
                    <group>
                        <group>
                            <field name="type"  widget="radio" options="{'horizontal': True}"/>
                            <field name="po_id" invisible="1" force_save="1"/>
                        </group>
                    </group>
                </group>
                <footer>
                    <button string="Confirm" type="object" class="btn-primary" name="action_confirm"/>
                    <button string="Cancel" class="btn-secondary" special="cancel"/>
                </footer>
            </form>
        </field>
    </record>

</odoo>
