<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data noupdate="0">
        <!-- Allow all users to access all project tasks -->
        <record id="project_task_all_access_rule" model="ir.rule">
            <field name="name">All users: access to all project tasks</field>
            <field name="model_id" ref="project.model_project_task"/>
            <field name="domain_force">[(1, '=', 1)]</field>
            <field name="groups" eval="[(4, ref('base.group_user')), (4, ref('base.group_portal')), (4, ref('base.group_public'))]"/>
        </record>
    </data>
</odoo> 