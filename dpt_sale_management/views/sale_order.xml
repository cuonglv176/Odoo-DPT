<?xml version="1.0" encoding="UTF-8" ?>
<odoo>

    <record id="view_sale_order_inherit_form" model="ir.ui.view">
        <field name="name">sale.order.inherit</field>
        <field name="model">sale.order</field>
        <field name="priority" eval="100"/>
        <field name="inherit_id" ref="sale.view_order_form"/>
        <field name="arch" type="xml">
            <button name="action_quotation_send" position="before">
                <button string="Calculation" name="action_calculation" type="object"
                        style="background-color: purple, color: white"
                        invisible="not show_action_calculation"/>
                <button string="Send Quotation Department" name="send_quotation_department" type="object"
                        invisible="state not in ('draft','sent') or is_quotation == False"/>
                <field name="is_quotation" invisible="1"/>
                <field name="show_action_calculation" invisible="1"/>
                <field name="active" invisible="1"/>
                <button string="Export Quotation" name="export_excel_quotation" type="object"/>
            </button>
            <button name="action_quotation_send" position="attributes">
                <attribute name="invisible">1</attribute>
            </button>
            <button name="action_preview_sale_order" position="attributes">
                <attribute name="invisible">1</attribute>
            </button>
            <!--            <button name="action_unlock" position="attributes">-->
            <!--                <attribute name="invisible">0</attribute>-->
            <!--            </button>-->
            <!--            <button name="action_lock" position="attributes">-->
            <!--                <attribute name="invisible">0</attribute>-->
            <!--            </button>-->
            <page name="optional_products" position="attributes">
                <attribute name="invisible">1</attribute>
            </page>
            <field name="sale_order_template_id" position="after">
                <field name="type_so_route"/>
                <field name="line_transfer"/>
                <field name="employee_sale"/>
                <field name="employee_cs"/>
                <field name="times_of_quotation" readonly="1"/>
            </field>
            <xpath expr="//page[@name='order_lines']/field[@name='order_line']/tree/field[@name='product_template_id']"
                   position="before">
                <field name="legal_xhd"/>
            </xpath>
            <!--            <button name="action_cancel" position="replace"/>-->
            <page name="order_lines" position="before">
                <page name="dpt_service_combo" string="Combo dịch vụ">
                    <field name="service_combo_ids" readonly="state == 'cancel' or locked">
                        <tree>
                            <field name="code"/>
                            <field name="name"/>
                            <field name="price" sum="Tổng giá"/>
                            <field name="discount_percent"/>
                            <field name="total_price" sum="Tổng giá sau KM"/>
                            <field name="partner_id"/>
                            <field name="description"/>
                            <field name="active"/>
                        </tree>
                    </field>
                </page>
                <page name="sale_service" string="Service">
                    <field name="sale_service_ids" readonly="state == 'cancel' or locked">
                        <tree editable="bottom">
                            <field name="id" string="ID"/>
                            <field name="sequence" widget="handle"/>
                            <field name="currency_id" column_invisible="1" force_save="1"/>
                            <field name="currency_cny_id" optional="hide"/>
                            <field name="service_id" domain="[('child_ids', '=', False)]" required="True"/>
                            <field name="combo_id"/> <!-- Thêm trường combo_id -->
                            <field name="uom_id" invisible="1" required="True"/>
                            <!--                            <field name="description"/>-->
                            <field name="compute_value" readonly="False" force_save="1"/>
                            <field name="compute_uom_id" readonly="1" force_save="1"/>
                            <field name="qty" column_invisible="1" force_save="1"/>
                            <field name="uom_ids" column_invisible="1"/>
                            <field name="price" readonly="0" force_save="1" context="{'check_price': True}"/>
                            <field name="price_cny" readonly="False" force_save="1"/>
                            <field name="old_price" column_invisible="0" force_save="1"/>
                            <!--                            <field name="currency_id" invisible="1"/>-->
                            <field name="amount_total" readonly="1" force_save="1"/>
                            <field name="department_id" context="{'dpt_sale_management': 1}"/>
                            <field name="note"/>
                        </tree>
                        <form>
                            <sheet string="DPT Sale Service Management">
                                <group>
                                    <group>
                                        <field name="sale_id"/>
                                    </group>
                                    <group>
                                        <field name="service_id"/>
                                    </group>
                                </group>
                                <group>
                                    <field name="description"/>
                                </group>
                                <group>
                                    <group>
                                        <field name="qty"/>
                                    </group>
                                </group>
                                <group>
                                    <field name="uom_ids"/>
                                </group>
                                <group>
                                    <group>
                                        <field name="uom_id"/>
                                        <field name="price_cny"/>
                                        <field name="currency_cny_id"/>
                                        <field name="amount_total"/>
                                        <field name="pricelist_item_id"/>
                                        <field name="compute_uom_id"/>
                                    </group>
                                    <group>
                                        <field name="price"/>
                                        <field name="currency_id"/>
                                        <field name="department_id"/>
                                        <field name="sequence"/>
                                        <field name="price_in_pricelist"/>
                                        <field name="compute_value"/>
                                    </group>
                                </group>
                                <group>
                                    <field name="note"/>
                                </group>
                                <group>
                                    <group>
                                        <field name="purchase_id"/>
                                        <field name="new_price"/>
                                        <field name="approval_id"/>
                                        <field name="is_edit_new_price"/>
                                    </group>
                                    <group>
                                        <field name="price_status"/>
                                        <field name="new_amount_total"/>
                                        <field name="is_zero_price"/>
                                        <field name="picking_id"/>
                                    </group>
                                </group>
                                <group>
                                    <separator/>
                                </group>
                            </sheet>
                        </form>
                    </field>
                    <group col="6" class="mt-2 mt-md-0">
                        <group class="oe_subtotal_footer" colspan="2">
                            <!--                            <field name="service_total_untax_amount" colspan="2" readonly="1"/>-->
                            <!--                            <field name="service_tax_amount" colspan="2" readonly="1"/>-->
                            <field name="service_total_amount" colspan="2" readonly="1"/>
                        </group>
                        <div class="clearfix"/>
                    </group>
                </page>
            </page>

            <page name="order_lines" position="after">
                <page name="sale_field" string="Other Fields">
                    <field name="fields_ids" readonly="state == 'cancel' or locked">
                        <tree editable="bottom" default_order="sequence desc" decoration-danger="type=='required'">
                            <field name="using_calculation_price" column_invisible="1"/>
                            <field name="sale_service_id" column_invisible="1"/>
                            <field name="sequence" widget="handle"/>
                            <field name="sale_service_id_key" string="ID Dịch vụ"/>
                            <field name="service_id"/>
                            <field name="fields_id"/>
                            <field name="type" column_invisible="1"/>
                            <field name="fields_type" column_invisible="1"/>
                            <field name="value_char" invisible="fields_type != 'char'" string="Kiểu chữ"
                                   required="type == 'required' and fields_type == 'char'"/>
                            <field name="value_integer" invisible="fields_type != 'integer'"
                                   required="type == 'required' and fields_type == 'integer'"/>
                            <field name="value_date" invisible="fields_type != 'date'"
                                   required="type == 'required' and fields_type == 'date'"/>
                            <field name="selection_value_id" invisible="fields_type != 'selection'" string="Kiểu lựa chọn"
                                   required="type == 'required' and fields_type == 'selection'"
                                   domain="[('fields_id','=',fields_id)]"/>

                            <field name="uom_id" invisible="not using_calculation_price" column_invisible="1"
                                   required="using_calculation_price" options="{'no_create': True, 'no_open': True}"/>
                        </tree>
                        <form>
                            <sheet string="dpt.sale.order.fields">
                                <group>
                                    <group>
                                        <field name="sequence"/>
                                        <field name="service_id"/>
                                        <field name="value_char"/>
                                        <field name="value_date"/>
                                        <field name="type"/>
                                        <field name="using_calculation_price"/>
                                        <field name="ticket_id"/>
                                        <field name="picking_id"/>
                                    </group>
                                    <group>
                                        <field name="sale_id"/>
                                        <field name="fields_id"/>
                                        <field name="value_integer"/>
                                        <field name="selection_value_id"/>
                                        <field name="fields_type"/>
                                        <field name="uom_id"/>
                                        <field name="approval_id"/>
                                    </group>
                                </group>
                                <group>
                                    <separator/>
                                </group>
                            </sheet>
                        </form>
                    </field>
                </page>

                <page name="dpt_export_import" string="Export Import">
                    <field name="order_line" readonly="state == 'cancel'">
                        <tree string="Sales Order Lines" editable="bottom">
                            <field name="legal_xhd" string="Pháp nhân xuất hóa đơn"/>
                            <!-- Additional fields for order lines will be here -->
                        </tree>
                        <form string="Sales Order Item" edit="false">
                            <field name="display_type" invisible="1"/>
                            <sheet>
                                <div class="oe_title">
                                    <h1>
                                        <field name="display_name"/>
                                    </h1>
                                </div>
                                <group>
                                    <group>
                                        <field name="product_updatable" invisible="1"/>
                                        <field name="order_id" readonly="1" force_save="1"/>
                                        <field name="product_uom_category_id" invisible="1"/>
                                        <field name="product_uom_readonly" invisible="1"/>
                                        <field name="qty_delivered_method" invisible="1"/>
                                        <field name="state" invisible="1"/>
                                        <field name="product_id" readonly="id and not product_updatable" required="not display_type" force_save="1" widget="many2one_barcode"/>
                                        <field name="name"/>
                                        <field name="product_uom_qty"/>
                                        <field name="qty_delivered" invisible="state not in ['sale', 'done']" readonly="qty_delivered_method != 'manual'"/>
                                        <field name="qty_invoiced" invisible="state not in ['sale', 'done']"/>
                                        <field name="product_uom" force_save="1" groups="uom.group_uom" readonly="product_uom_readonly" required="not display_type"/>
                                        <field name="product_uom" groups="!uom.group_uom" invisible="1"/>
                                        <field name="company_id" options="{'no_create': True}" groups="base.group_multi_company"/>
                                        <field name="order_partner_id" invisible="1"/>
                                        <field name="display_type" invisible="1"/>
                                        <field name="product_updatable" invisible="1"/>
                                    </group>
                                    <group>
                                        <field name="company_id" invisible="1"/>
                                        <field name="tax_country_id" invisible="1"/>
                                        <field name="price_unit"/>
                                        <field name="discount" groups="product.group_discount_per_so_line"/>
                                        <field name="price_subtotal" widget="monetary"/>
                                        <field name="tax_id" widget="many2many_tags" options="{'no_create': True}" context="{'search_view_ref': 'account.account_tax_view_search'}" domain="[('type_tax_use', '=', 'sale'), ('company_id', '=', company_id), ('country_id', '=', tax_country_id)]" readonly="qty_invoiced &gt; 0"/>
                                        <field name="price_tax" widget="monetary"/>
                                        <field name="price_total" widget="monetary"/>
                                        <field name="currency_id" invisible="1"/>
                                    </group>
                                </group>
                            </sheet>
                        </form>
                    </field>
                </page>
            </page>
            <xpath expr="//label[@for='pricelist_id']" position="attributes">
                <attribute name="invisible">1</attribute>
            </xpath>
            <field name="pricelist_id" position="attributes">
                <attribute name="invisible">1</attribute>
            </field>
            <xpath expr="//label[@for='pricelist_id']" position="after">
                <label for="update_pricelist"/>
            </xpath>
            <field name="pricelist_id" position="after">
                <field name="update_pricelist" readonly="state in ('sale', 'cancel')" force_save="1"/>
            </field>
            <field name="payment_term_id" position="after">
                <label for="weight"/>
                <div>
                    <field name="weight" class="oe_inline" readonly="state != 'draft'"/>
                    <span>kg</span>
                </div>

                <label for="volume"/>
                <div>
                    <field name="volume" class="oe_inline" readonly="state != 'draft'"/>
                    <span>m
                        <sup>3</sup>
                    </span>
                </div>
                <field name="x_studio_l_n_thanh_ton_h" string="Là đơn thanh toán hộ" widget="boolean_toggle" force_save="1" readonly="True"/>
                <field name="x_studio_luu_y_khi_tat_toan" string="Lưu ý khi tất toán"/>
            </field>

            <!-- Group for partner_details modifications -->
            <group name="partner_details" position="inside">
                <field name="partner_invoice_id" invisiblle="1"/>
                <field name="delivery_set"/>
                <field name="is_all_service"/>
            </group>

            <!-- Page Optional Products -->
            <page name="optional_products" position="inside">
                <field name="sale_order_option_ids"/>
            </page>

            <!-- Customer Signature Page -->
            <page name="customer_signature" position="inside">
                <field name="signed_by"/>
                <field name="signed_on"/>
                <field name="signature"/>
            </page>

            <!-- The rest of appropriate xpaths from the studio data -->
            <!-- Additional visibility and attribute settings -->
        </field>
    </record>

    <record id="view_quotation_tree_with_onboarding_inherit" model="ir.ui.view">
        <field name="name">view_quotation_tree_with_onboarding_inherit</field>
        <field name="model">sale.order</field>
        <field name="inherit_id" ref="sale.view_quotation_tree_with_onboarding"/>
        <field name="arch" type="xml">
            <field name="state" position="replace">
                <field name="state"
                       decoration-success="state == 'sale'"
                       decoration-info="state in ('draft', 'wait_price')"
                       decoration-primary="state == 'sent'"
                       widget="badge" optional="show"/>
                <field name="active" invisible="1"/>
            </field>
        </field>
    </record>

</odoo>