<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- Form View for Assign Task Wizard -->
    <record id="view_dpt_assign_task_wizard_form" model="ir.ui.view">
        <field name="name">dpt.assign.task.wizard.form</field>
        <field name="model">dpt.assign.task.wizard</field>
        <field name="arch" type="xml">
            <form string="Giao việc">
                <sheet>
                    <group>
                        <group>
                            <field name="name" placeholder="Tên công việc"/>
                            <field name="employee_id" options="{'no_create': True}"/>
                            <field name="priority" widget="priority"/>
                        </group>
                        <group>
                            <field name="deadline"/>
                        </group>
                    </group>
                    <notebook>
                        <page string="Mô tả" name="description">
                            <field name="description" placeholder="Thêm mô tả..."/>
                        </page>
                    </notebook>
                </sheet>
                <footer>
                    <button name="action_assign_task" string="Giao việc" type="object" class="btn-primary"/>
                    <button string="Hủy" class="btn-secondary" special="cancel"/>
                </footer>
            </form>
        </field>
    </record>

    <!-- Action to open the wizard -->
    <record id="action_dpt_assign_task_wizard" model="ir.actions.act_window">
        <field name="name">Giao việc</field>
        <field name="res_model">dpt.assign.task.wizard</field>
        <field name="view_mode">form</field>
        <field name="target">new</field>
    </record>

    <!-- Menu item được định nghĩa trong menu_views.xml -->
</odoo> 