<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="res_config_settings_view_form_inherit_dpt_export_import" model="ir.ui.view">
        <field name="name">res.config.settings.view.form.inherit.dpt.export.import</field>
        <field name="model">res.config.settings</field>
        <field name="inherit_id" ref="account.res_config_settings_view_form"/>
        <field name="arch" type="xml">
            <xpath expr="//block[@id='invoicing_settings']" position="inside">
                <div class="col-12 col-lg-6 o_setting_box" id="dpt_price_approval_settings">
                    <div class="o_setting_left_pane"/>
                    <div class="o_setting_right_pane">
                        <span class="o_form_label">Cấu hình Tỷ lệ Lợi nhuận Xuất Hóa Đơn</span>
                        <div class="text-muted">
                            Cấu hình tỷ lệ lợi nhuận cho phép khi xuất hóa đơn
                        </div>
                        <div class="content-group">
                            <div class="row mt16">
                                <label for="dpt_min_profit_margin" class="col-lg-4 o_light_label"/>
                                <field name="dpt_min_profit_margin"/>
                            </div>
                            <div class="row">
                                <label for="dpt_max_profit_margin" class="col-lg-4 o_light_label"/>
                                <field name="dpt_max_profit_margin"/>
                            </div>
                        </div>
                    </div>
                </div>
            </xpath>
        </field>
    </record>
</odoo> 