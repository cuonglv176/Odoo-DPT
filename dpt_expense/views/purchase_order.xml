<?xml version="1.0" encoding="UTF-8" ?>
<odoo>

    <record id="purchase_order_expense_form_inherit" model="ir.ui.view">
        <field name="name">purchase_order_expense_form_inherit</field>
        <field name="model">purchase.order</field>
        <field name="inherit_id" ref="purchase.purchase_order_form"/>
        <field name="arch" type="xml">
            <xpath expr="//notebook" position="inside">
                <page name="expense_allocation" string="Phân bổ chi phí">
                    <separator string="Phiếu vận chuyển"/>
                    <field name="shipping_slip_ids">
                        <tree>
                            <field name="name"/>
                            <field name="export_import_name"/>
                        </tree>
                    </field>
                    <separator string="Đơn hàng tính chi phí"/>
                    <field name="order_expense_ids">
                        <tree>
                            <field name="name"/>
                            <field name="partner_id"/>
                            <field name="expense_amount_total"/>
                        </tree>
                    </field>
                    <separator string="Tổng hợp Đơn hàng tính chi phí"/>
                    <field name="total_order_expense_ids">
                        <tree>
                            <field name="name"/>
                            <field name="partner_id"/>
                            <field name="expense_amount_total"/>
                        </tree>
                    </field>
                </page>
            </xpath>
            <xpath expr="//div[@name='button_box']" position="inside">
                <button type="object" name="action_view_expense_allocation" class="oe_stat_button"
                        icon="fa-pencil-square-o" invisible="expense_allocation_count == 0">
                    <field name="expense_allocation_count" widget="statinfo" string="Phân bổ chi phí"/>
                </button>
                <button type="object" name="action_view_expense_account_move" class="oe_stat_button"
                        icon="fa-pencil-square-o" invisible="expense_move_count == 0">
                    <field name="expense_move_count" widget="statinfo" string="Bút toán phân bổ"/>
                </button>
            </xpath>
            <field name="state" position="before">
                <button name="action_popup_create_account_move" type="object" string="Tạo hóa đơn / phân bổ"
                        class="oe_highlight" invisible="state not in ('purchase','done')"/>
            </field>
            <xpath expr="//button[@name='action_create_invoice']" position="attributes">
                <attribute name="invisible">1</attribute>
            </xpath>
        </field>
    </record>

</odoo>