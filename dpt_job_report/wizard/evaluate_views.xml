<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- Form View -->
    <record id="view_dpt_job_report_evaluate_wizard_form" model="ir.ui.view">
        <field name="name">dpt.job.report.evaluate.wizard.form</field>
        <field name="model">dpt.job.report.evaluate.wizard</field>
        <field name="arch" type="xml">
            <form string="Đánh giá báo cáo công việc">
                <sheet>
                    <group>
                        <group>
                            <field name="report_id" invisible="1"/>
                            <field name="employee_id"/>
                            <field name="date_from"/>
                            <field name="date_to"/>
                        </group>
                        <group>
                            <field name="completion_rate" widget="percentage"/>
                            <field name="on_time_rate" widget="percentage"/>
                        </group>
                    </group>
                    
                    <notebook>
                        <page string="Tự đánh giá của nhân viên" name="self_evaluation">
                            <group>
                                <field name="self_evaluation" nolabel="1" placeholder="Nhân viên chưa tự đánh giá." readonly="1" colspan="4"/>
                            </group>
                            <group string="Góp ý/Kiến nghị của nhân viên" invisible="self_comment == False">
                                <field name="self_comment" nolabel="1" readonly="1" colspan="4"/>
                            </group>
                        </page>
                        
                        <page string="Đánh giá của quản lý" name="manager_evaluation">
                            <group string="Đánh giá">
                                <field name="manager_evaluation" nolabel="1" placeholder="Nhập đánh giá của bạn về kết quả công việc của nhân viên trong kỳ báo cáo..." colspan="4" required="1"/>
                            </group>
                            <group string="Nhận xét">
                                <field name="manager_comment" nolabel="1" placeholder="Nhập nhận xét, đề xuất cải tiến, hoặc gợi ý phát triển cho nhân viên..." colspan="4"/>
                            </group>
                        </page>
                    </notebook>
                </sheet>
                <footer>
                    <button name="action_confirm" string="Xác nhận" type="object" class="btn-primary"/>
                    <button string="Hủy" class="btn-secondary" special="cancel"/>
                </footer>
            </form>
        </field>
    </record>
</odoo> 