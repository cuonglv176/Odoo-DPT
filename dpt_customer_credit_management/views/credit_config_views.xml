<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- Credit Configuration Settings -->
    <record id="view_credit_config_settings" model="ir.ui.view">
        <field name="name">credit.config.settings.form</field>
        <field name="model">credit.config.settings</field>
        <field name="arch" type="xml">
            <form string="Credit Management Settings" class="oe_form_configuration">
                <header>
                    <button string="Save" type="object" name="execute" class="oe_highlight"/>
                    <button string="Cancel" type="object" name="cancel" class="oe_link"/>
                </header>
                <sheet>
                    <div class="o_setting_container">
                        <div class="o_setting_box">
                            <div class="o_setting_left_pane"/>
                            <div class="o_setting_right_pane">
                                <label string="Default Credit Settings"/>
                                <div class="text-muted">
                                    Configure default values for new customers
                                </div>
                                <div class="content-group">
                                    <div class="mt16">
                                        <label for="default_credit_limit" class="o_light_label"/>
                                        <field name="default_credit_limit" widget="monetary"/>
                                    </div>
                                    <div class="mt16">
                                        <label for="default_interest_rate" class="o_light_label"/>
                                        <field name="default_interest_rate" widget="percentage"/>
                                    </div>
                                </div>
                            </div>
                        </div>

                        <div class="o_setting_box">
                            <div class="o_setting_left_pane">
                                <field name="auto_block_on_limit"/>
                            </div>
                            <div class="o_setting_right_pane">
                                <label for="auto_block_on_limit"/>
                                <div class="text-muted">
                                    Automatically block sales when credit limit is exceeded
                                </div>
                                <div class="content-group" invisible="not auto_block_on_limit">
                                    <div class="mt16">
                                        <label for="warning_threshold" string="Warning Threshold" class="o_light_label"/>
                                        <field name="warning_threshold" widget="percentage"/>
                                        <div class="text-muted">
                                            Show warning when credit utilization exceeds this percentage
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>

                        <div class="o_setting_box">
                            <div class="o_setting_left_pane"/>
                            <div class="o_setting_right_pane">
                                <label string="Interest Calculation"/>
                                <div class="text-muted">
                                    Configure how interest penalties are calculated
                                </div>
                                <div class="content-group">
                                    <div class="mt16">
                                        <label for="interest_calculation_frequency" class="o_light_label"/>
                                        <field name="interest_calculation_frequency"/>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </sheet>
            </form>
        </field>
    </record>

    <!-- Configuration Action -->
    <record id="action_credit_config_settings" model="ir.actions.act_window">
        <field name="name">Credit Management Settings</field>
        <field name="res_model">credit.config.settings</field>
        <field name="view_mode">form</field>
        <field name="target">inline</field>
    </record>
</odoo>
