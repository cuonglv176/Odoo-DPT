<?xml version="1.0" encoding="utf-8" ?>
<odoo>

    <record id="view_sale_calculation_form" model="ir.ui.view">
        <field name="name">dpt.sale.calculation</field>
        <field name="model">dpt.sale.calculation</field>
        <field name="arch" type="xml">
            <form string="Calculation Service">
                <field name="service_id" nolabel="1" readonly="1" force_save="1"/>
                <notebook>
                    <page string="Service">
                        <field name="service_ids">
                            <tree editable="bottom">
                                <field name="uom_id"/>
                                <field name="qty"/>
                                <field name="price"/>
                                <field name="amount_total"/>
                            </tree>
                        </field>
                    </page>
                </notebook>
                <footer>
                    <button string="Confirm" special="save" class="btn-primary"/>
                    <button string="Cancel" class="btn-secondary" special="cancel"/>
                </footer>
            </form>
        </field>
    </record>

</odoo>
