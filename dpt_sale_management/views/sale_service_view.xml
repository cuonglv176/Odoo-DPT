<?xml version="1.0" encoding="utf-8" ?>
<odoo>
    <record id="view_sale_order_inherit_form" model="ir.ui.view">
        <field name="name">sale.order.inherit</field>
        <field name="model">sale.order</field>
        <field name="inherit_id" ref="sale.view_order_form"/>
        <field name="arch" type="xml">
            <button name="action_quotation_send" position="before">
                <button string="Send Quotation Department" name="send_quotation_department" type="object"/>
                <button string="Change Price" name="action_change_price" type="object"/>
            </button>
            <button name="action_quotation_send" position="attributes">
                <attribute name="invisible">1</attribute>
            </button>
            <button name="action_preview_sale_order" position="attributes">
                <attribute name="invisible">1</attribute>
            </button>
<!--            <button name="action_cancel" position="replace"/>-->
            <page name="order_lines" position="before">
                <page name="sale_service" string="Service">
                    <field name="sale_service_ids">
                        <tree editable="bottom">
<!--                            <field name="sale_id" invisible="1"/>-->
                            <field name="sequence" widget="handle"/>
                            <field name="service_id"/>
                            <field name="description"/>
                            <field name="qty"/>
                            <field name="uom_id"/>
                            <field name="price"/>
<!--                            <field name="currency_id" invisible="1"/>-->
                            <field name="department_id"/>
                            <field name="amount_total"/>
                            <field name="status"/>
                            <button string="Tính giá" name="action_calculation" type="object" style="background-color: purple, color: white"/>
                        </tree>
                    </field>
                    <group col="6" class="mt-2 mt-md-0">
                        <group class="oe_subtotal_footer" colspan="2">
                            <field name="service_total_untax_amount" string="Số tiền trước thuế" colspan="2" readonly="1"/>
                            <field name="service_tax_amount" string="Thuế" colspan="2" readonly="1"/>
                            <field name="service_total_amount" string="Tổng" colspan="2" readonly="1"/>
                        </group>
                        <div class="clearfix"/>
                    </group>
                </page>
            </page>
        </field>
    </record>

</odoo>
