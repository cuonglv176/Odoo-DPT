<?xml version="1.0" encoding="UTF-8" ?>
<odoo>
    <record id="view_product_template_product_deposit_inherit_form" model="ir.ui.view">
        <field name="name">view.product.template.product.service.inherit.form</field>
        <field name="model">product.template</field>
        <field name="inherit_id" ref="product.product_template_form_view"/>
        <field name="arch" type="xml">
            <xpath expr="//div[@name='options']" position="inside">
                <span class="d-inline-block">
                    <field name="is_product_deposit"/>
                    <label for="is_product_deposit"/>
                    <label for="is_product_buy"/>
                    <field name="is_product_buy"/>
                </span>
            </xpath>
        </field>
    </record>

</odoo>