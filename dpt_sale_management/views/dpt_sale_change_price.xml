<?xml version="1.0" encoding="UTF-8" ?>
<odoo>

    <record id="view_sale_change_price_form" model="ir.ui.view">
        <field name="name">dpt.sale.change.price</field>
        <field name="model">dpt.sale.change.price</field>
        <field name="arch" type="xml">
            <form string="Change Price">
                <notebook>
                    <page string="Service">
                        <field name="service_ids">
                            <tree editable="bottom">
                                <field name="service_id"/>
                                <field name="qty"/>
                                <field name="price"/>
                                <field name="change_price"/>
                                <field name="amount_total"/>
                            </tree>
                        </field>
                    </page>
                    <page string="Product">
                        <field name="product_ids">
                            <tree editable="bottom">
                                <field name="product_id"/>
                                <field name="qty"/>
                                <field name="price"/>
                                <field name="change_price"/>
                                <field name="amount_total"/>
                            </tree>
                        </field>
                    </page>
                </notebook>
                <footer>
                    <button string="Send" name="send_request" type="object" class="btn-primary"/>
                    <button string="Cancel" class="btn-secondary" special="cancel"/>
                </footer>
            </form>
        </field>
    </record>

</odoo>