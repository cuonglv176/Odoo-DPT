<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- Form View -->
    <record id="view_dpt_system_task_form" model="ir.ui.view">
        <field name="name">dpt.system.task.form</field>
        <field name="model">dpt.system.task</field>
        <field name="arch" type="xml">
            <form string="Công việc hệ thống">
                <header>
                    <button name="action_done" string="Đánh dấu hoàn thành" type="object" class="oe_highlight" invisible="state == 'done'"/>
                    <button name="action_cancel" string="Hủy công việc" type="object" invisible="state == 'cancelled'"/>
                    <field name="state" widget="statusbar" statusbar_visible="open,done,cancelled"/>
                </header>
                <sheet>
                    <div class="oe_button_box" name="button_box">
                        <button name="action_view_reference" string="Xem tham chiếu" type="object" class="oe_stat_button" icon="fa-external-link"/>
                    </div>
                    <div class="oe_title">
                        <h1>
                            <field name="name" readonly="1"/>
                        </h1>
                    </div>
                    <group>
                        <group>
                            <field name="report_id" options="{'no_create': True}"/>
                            <field name="employee_id"/>
                            <field name="type"/>
                        </group>
                        <group>
                            <field name="reference_model"/>
                            <field name="reference_id"/>
                            <field name="reference_name"/>
                            <field name="date_start"/>
                            <field name="date_end"/>
                        </group>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <!-- Tree View -->
    <record id="view_dpt_system_task_tree" model="ir.ui.view">
        <field name="name">dpt.system.task.tree</field>
        <field name="model">dpt.system.task</field>
        <field name="arch" type="xml">
            <tree string="Công việc hệ thống" decoration-success="state == 'done'" decoration-info="state == 'open'" decoration-muted="state == 'cancelled'">
                <field name="name"/>
                <field name="report_id"/>
                <field name="employee_id"/>
                <field name="type"/>
                <field name="reference_name"/>
                <field name="state"/>
                <field name="date_start"/>
                <field name="date_end"/>
                <button name="action_done" string="Hoàn thành" type="object" icon="fa-check" invisible="state == 'done' or state == 'cancelled'"/>
                <button name="action_cancel" string="Hủy" type="object" icon="fa-times" invisible="state == 'done' or state == 'cancelled'"/>
                <button name="action_view_reference" string="Xem tham chiếu" type="object" icon="fa-external-link"/>
            </tree>
        </field>
    </record>

    <!-- Search View -->
    <record id="view_dpt_system_task_search" model="ir.ui.view">
        <field name="name">dpt.system.task.search</field>
        <field name="model">dpt.system.task</field>
        <field name="arch" type="xml">
            <search string="Tìm kiếm công việc hệ thống">
                <field name="name"/>
                <field name="employee_id"/>
                <field name="report_id"/>
                <field name="reference_name"/>
                <filter string="Công việc của tôi" name="my_tasks" domain="[('employee_id.user_id', '=', uid)]"/>
                <filter string="Đang mở" name="open" domain="[('state', '=', 'open')]"/>
                <filter string="Hoàn thành" name="done" domain="[('state', '=', 'done')]"/>
                <filter string="Đã hủy" name="cancelled" domain="[('state', '=', 'cancelled')]"/>
                <filter string="Cần thanh toán" name="payment_needed" domain="[('type', '=', 'payment')]"/>
                <filter string="Cần xếp xe" name="shipping_needed" domain="[('type', '=', 'shipping')]"/>
                <filter string="Đang chờ giao hàng" name="delivery_pending" domain="[('type', '=', 'delivery')]"/>
                <filter string="Cần xuất hóa đơn" name="invoice_needed" domain="[('type', '=', 'invoice')]"/>
                <group expand="0" string="Nhóm theo">
                    <filter string="Nhân viên" name="employee" context="{'group_by': 'employee_id'}"/>
                    <filter string="Báo cáo" name="report" context="{'group_by': 'report_id'}"/>
                    <filter string="Loại công việc" name="type" context="{'group_by': 'type'}"/>
                    <filter string="Trạng thái" name="status" context="{'group_by': 'state'}"/>
                </group>
            </search>
        </field>
    </record>

    <!-- Action -->
    <record id="action_dpt_system_task" model="ir.actions.act_window">
        <field name="name">Công việc hệ thống</field>
        <field name="res_model">dpt.system.task</field>
        <field name="view_mode">tree,form</field>
        <field name="search_view_id" ref="view_dpt_system_task_search"/>
        <field name="context">{'search_default_my_tasks': 1, 'search_default_open': 1}</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                Không tìm thấy công việc hệ thống nào!
            </p>
            <p>
                Công việc hệ thống được tạo tự động từ đơn hàng và các đối tượng nghiệp vụ khác.
            </p>
        </field>
    </record>
</odoo> 