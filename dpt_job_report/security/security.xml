<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- Quy tắc cho báo cáo công việc -->
    <record id="rule_job_report_employee" model="ir.rule">
        <field name="name">User can see all job reports</field>
        <field name="model_id" ref="model_dpt_job_report"/>
        <field name="domain_force">[(1, '=', 1)]</field>
        <field name="groups" eval="[(4, ref('base.group_user'))]"/>
    </record>
    
    <!-- Quy tắc cho công việc tự tạo/được giao -->
    <record id="rule_job_task_employee" model="ir.rule">
        <field name="name">User can see all job tasks</field>
        <field name="model_id" ref="model_dpt_job_task"/>
        <field name="domain_force">[(1, '=', 1)]</field>
        <field name="groups" eval="[(4, ref('base.group_user'))]"/>
    </record>
    
    <!-- Quy tắc cho công việc hệ thống -->
    <record id="rule_system_task_employee" model="ir.rule">
        <field name="name">User can see all system tasks</field>
        <field name="model_id" ref="model_dpt_system_task"/>
        <field name="domain_force">[(1, '=', 1)]</field>
        <field name="groups" eval="[(4, ref('base.group_user'))]"/>
    </record>
</odoo> 