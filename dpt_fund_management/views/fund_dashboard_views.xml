<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- Dashboard Form View -->
    <record id="view_fund_dashboard_form" model="ir.ui.view">
        <field name="name">fund.dashboard.form</field>
        <field name="model">fund.dashboard</field>
        <field name="arch" type="xml">
            <form string="Fund Dashboard">
                <header>
                    <button name="refresh_dashboard" string="Refresh Data" type="object" class="btn-primary"/>
                </header>
                <sheet>
                    <div class="oe_title">
                        <h1><field name="name"/></h1>
                    </div>

                    <group>
                        <group>
                            <field name="date_from"/>
                            <field name="date_to"/>
                        </group>
                    </group>

                    <!-- Summary Cards -->
                    <div class="row mt16">
                        <div class="col-lg-3 col-6">
                            <div class="card bg-primary text-white">
                                <div class="card-body">
                                    <h4><field name="total_balance" widget="monetary"/></h4>
                                    <p>Total Balance</p>
                                </div>
                            </div>
                        </div>
                        <div class="col-lg-3 col-6">
                            <div class="card bg-success text-white">
                                <div class="card-body">
                                    <h4><field name="total_income" widget="monetary"/></h4>
                                    <p>Total Income</p>
                                </div>
                            </div>
                        </div>
                        <div class="col-lg-3 col-6">
                            <div class="card bg-danger text-white">
                                <div class="card-body">
                                    <h4><field name="total_expense" widget="monetary"/></h4>
                                    <p>Total Expense</p>
                                </div>
                            </div>
                        </div>
                        <div class="col-lg-3 col-6">
                            <div class="card bg-info text-white">
                                <div class="card-body">
                                    <h4><field name="net_profit" widget="monetary"/></h4>
                                    <p>Net Profit</p>
                                </div>
                            </div>
                        </div>
                    </div>

                    <!-- Performance Metrics -->
                    <div class="row mt16">
                        <div class="col-lg-4">
                            <div class="card">
                                <div class="card-body text-center">
                                    <h3><field name="roi_percentage"/>%</h3>
                                    <p>ROI Percentage</p>
                                </div>
                            </div>
                        </div>
                        <div class="col-lg-4">
                            <div class="card">
                                <div class="card-body text-center">
                                    <h3><field name="liquidity_ratio"/></h3>
                                    <p>Liquidity Ratio</p>
                                </div>
                            </div>
                        </div>
                        <div class="col-lg-4">
                            <div class="card">
                                <div class="card-body text-center">
                                    <h3><field name="diversification_score"/>%</h3>
                                    <p>Diversification Score</p>
                                </div>
                            </div>
                        </div>
                    </div>

                    <!-- Charts Section -->
                    <div class="row mt16">
                        <div class="col-lg-6">
                            <div class="card">
                                <div class="card-header">
                                    <h5>Account Distribution</h5>
                                </div>
                                <div class="card-body">
                                    <canvas id="accountDistributionChart" width="400" height="200"></canvas>
                                </div>
                            </div>
                        </div>
                        <div class="col-lg-6">
                            <div class="card">
                                <div class="card-header">
                                    <h5>Monthly Performance</h5>
                                </div>
                                <div class="card-body">
                                    <canvas id="monthlyPerformanceChart" width="400" height="200"></canvas>
                                </div>
                            </div>
                        </div>
                    </div>

                    <div class="row mt16">
                        <div class="col-lg-12">
                            <div class="card">
                                <div class="card-header">
                                    <h5>Transaction Trend</h5>
                                </div>
                                <div class="card-body">
                                    <canvas id="transactionTrendChart" width="800" height="300"></canvas>
                                </div>
                            </div>
                        </div>
                    </div>
                </sheet>
            </form>
        </field>
    </record>

    <!-- Dashboard Action -->
    <record id="action_fund_dashboard" model="ir.actions.act_window">
        <field name="name">Fund Dashboard</field>
        <field name="res_model">fund.dashboard</field>
        <field name="view_mode">form</field>
        <field name="target">current</field>
    </record>


</odoo>
