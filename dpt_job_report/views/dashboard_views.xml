<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- Dashboard Kanban View -->
    <record id="view_dpt_job_report_dashboard" model="ir.ui.view">
        <field name="name">dpt.job.report.dashboard</field>
        <field name="model">dpt.job.report</field>
        <field name="arch" type="xml">
            <kanban class="o_kanban_dashboard" create="false">
                <field name="name"/>
                <field name="employee_id"/>
                <field name="date_from"/>
                <field name="date_to"/>
                <field name="job_task_count"/>
                <field name="system_task_count"/>
                <field name="completion_rate"/>
                <field name="avg_processing_time"/>
                <field name="on_time_rate"/>
                <templates>
                    <t t-name="kanban-box">
                        <div t-attf-class="oe_kanban_card oe_kanban_global_click">
                            <div class="oe_kanban_content">
                                <div class="o_kanban_record_top mb8">
                                    <div class="o_kanban_record_headings mt4">
                                        <strong class="o_kanban_record_title">
                                            <span><t t-esc="record.name.value"/></span>
                                        </strong>
                                        <small class="o_kanban_record_subtitle text-muted">
                                            <span><t t-esc="record.employee_id.value"/></span>
                                        </small>
                                    </div>
                                </div>
                                <div class="o_kanban_record_body">
                                    <div class="row">
                                        <div class="col-6">
                                            <span class="text-muted">Kỳ báo cáo:</span>
                                            <span><t t-esc="record.date_from.value"/> - <t t-esc="record.date_to.value"/></span>
                                        </div>
                                    </div>
                                    <div class="row mt8">
                                        <div class="col-6">
                                            <a type="object" name="action_view_job_tasks">
                                                <span class="badge text-bg-info">
                                                    <t t-esc="record.job_task_count.value"/> Công việc tự tạo
                                                </span>
                                            </a>
                                        </div>
                                        <div class="col-6">
                                            <a type="object" name="action_view_system_tasks">
                                                <span class="badge text-bg-secondary">
                                                    <t t-esc="record.system_task_count.value"/> Công việc hệ thống
                                                </span>
                                            </a>
                                        </div>
                                    </div>
                                    <div class="row mt8">
                                        <div class="col-12">
                                            <span class="text-muted">Tỷ lệ hoàn thành:</span>
                                            <div class="progress" style="height: 15px;">
                                                <div class="progress-bar bg-success" role="progressbar" 
                                                     t-att-style="'width: ' + record.completion_rate.value + '%'" 
                                                     t-att-aria-valuenow="record.completion_rate.value" 
                                                     aria-valuemin="0" aria-valuemax="100">
                                                    <t t-esc="Math.round(record.completion_rate.raw_value)"/>%
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                    <div class="row mt8">
                                        <div class="col-12">
                                            <span class="text-muted">Tỷ lệ đúng hạn:</span>
                                            <div class="progress" style="height: 15px;">
                                                <div class="progress-bar bg-info" role="progressbar" 
                                                     t-att-style="'width: ' + record.on_time_rate.value + '%'" 
                                                     t-att-aria-valuenow="record.on_time_rate.value" 
                                                     aria-valuemin="0" aria-valuemax="100">
                                                    <t t-esc="Math.round(record.on_time_rate.raw_value)"/>%
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                    <div class="row mt8">
                                        <div class="col-12">
                                            <span class="text-muted">Thời gian xử lý TB:</span>
                                            <span class="float-end"><t t-esc="Math.round(record.avg_processing_time.raw_value * 10) / 10"/> giờ</span>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </t>
                </templates>
            </kanban>
        </field>
    </record>
    
    <!-- Báo cáo tổng quan mới (Theo yêu cầu) -->
    <record id="view_dpt_job_report_overview_dashboard" model="ir.ui.view">
        <field name="name">dpt.job.report.overview.dashboard</field>
        <field name="model">dpt.job.report</field>
        <field name="arch" type="xml">
            <form string="Báo cáo tổng quan">
                <sheet>
                    <field name="employee_id" invisible="1"/>
                    <field name="date_from" invisible="1"/>
                    <field name="date_to" invisible="1"/>
                    
                    <!-- Thông tin nhận diện báo cáo -->
                    <div class="row mb16">
                        <div class="col-6">
                            <h2><field name="name" readonly="1"/></h2>
                            <h4><field name="employee_id"/></h4>
                            <h5>Kỳ báo cáo: <field name="date_from" nolabel="1"/> - <field name="date_to" nolabel="1"/></h5>
                        </div>
                    </div>
                    
                    <!-- Bốn ô thống kê -->
                    <div class="row mb32">
                        <!-- Tổng công việc -->
                        <div class="col-3">
                            <div class="o_dashboard_stat_kpi border rounded p-4 text-center">
                                <div class="o_dashboard_stat_kpi_value display-4 fw-bold text-primary">
                                    <field name="job_task_count" widget="statinfo" nolabel="1"/>
                                </div>
                                <div class="o_dashboard_stat_kpi_title fw-bold">Tổng công việc</div>
                            </div>
                        </div>
                        
                        <!-- Đang làm -->
                        <div class="col-3">
                            <div class="o_dashboard_stat_kpi border rounded p-4 text-center">
                                <div class="o_dashboard_stat_kpi_value display-4 fw-bold text-info">
                                    <field name="ongoing_task_count" widget="statinfo" nolabel="1"/>
                                </div>
                                <div class="o_dashboard_stat_kpi_title fw-bold">Đang làm</div>
                            </div>
                        </div>
                        
                        <!-- Đã xong -->
                        <div class="col-3">
                            <div class="o_dashboard_stat_kpi border rounded p-4 text-center">
                                <div class="o_dashboard_stat_kpi_value display-4 fw-bold text-success">
                                    <field name="completed_task_count" widget="statinfo" nolabel="1"/>
                                </div>
                                <div class="o_dashboard_stat_kpi_title fw-bold">Đã xong</div>
                            </div>
                        </div>
                        
                        <!-- Trễ -->
                        <div class="col-3">
                            <div class="o_dashboard_stat_kpi border rounded p-4 text-center">
                                <div class="o_dashboard_stat_kpi_value display-4 fw-bold text-danger">
                                    <field name="overdue_task_count" widget="statinfo" nolabel="1"/>
                                </div>
                                <div class="o_dashboard_stat_kpi_title fw-bold">Trễ</div>
                            </div>
                        </div>
                    </div>
                    
                    <!-- Nội dung báo cáo -->
                    <div class="row">
                        <!-- Cột trái: Đến hạn -->
                        <div class="col-6">
                            <div class="border rounded p-3">
                                <h4 class="mb-3">Đến hạn</h4>
                                <field name="upcoming_task_ids" widget="many2many" nolabel="1" readonly="1">
                                    <tree>
                                        <field name="name"/>
                                        <field name="deadline"/>
                                        <field name="priority" widget="priority"/>
                                        <field name="state"/>
                                        <button name="action_start" string="Bắt đầu" type="object" icon="fa-play" invisible="state != 'new'"/>
                                        <button name="action_done" string="Hoàn thành" type="object" icon="fa-check" invisible="state not in ['new', 'in_progress']"/>
                                    </tree>
                                </field>
                            </div>
                        </div>
                        
                        <!-- Cột phải: Phát sinh -->
                        <div class="col-6">
                            <div class="border rounded p-3">
                                <h4 class="mb-3">Phát sinh</h4>
                                <field name="today_tasks_ids" widget="many2many" nolabel="1" readonly="1">
                                    <tree>
                                        <field name="name"/>
                                        <field name="priority" widget="priority"/>
                                        <field name="source"/>
                                        <field name="state"/>
                                    </tree>
                                </field>
                            </div>
                        </div>
                    </div>
                    
                    <!-- Thống kê hiện trạng -->
                    <div class="row mt16">
                        <div class="col-12">
                            <div class="border rounded p-3">
                                <h4 class="mb-3">Thống kê hiện trạng</h4>
                                <div class="row">
                                    <div class="col-6">
                                        <!-- Bảng thống kê -->
                                        <table class="table table-sm">
                                            <thead>
                                                <tr>
                                                    <th>Trạng thái</th>
                                                    <th>Số lượng</th>
                                                </tr>
                                            </thead>
                                            <tbody>
                                                <tr>
                                                    <td>Mới</td>
                                                    <td><field name="status_new_count" nolabel="1" readonly="1"/></td>
                                                </tr>
                                                <tr>
                                                    <td>Đang thực hiện</td>
                                                    <td><field name="status_in_progress_count" nolabel="1" readonly="1"/></td>
                                                </tr>
                                                <tr>
                                                    <td>Hoàn thành</td>
                                                    <td><field name="status_done_count" nolabel="1" readonly="1"/></td>
                                                </tr>
                                                <tr>
                                                    <td>Đã hủy</td>
                                                    <td><field name="status_cancelled_count" nolabel="1" readonly="1"/></td>
                                                </tr>
                                            </tbody>
                                        </table>
                                    </div>
                                    <div class="col-6">
                                        <!-- Biểu đồ tĩnh thay vì dùng graph view -->
                                        <div class="border rounded p-3 text-center">
                                            <div style="font-weight: bold; margin-bottom: 10px;">Biểu đồ trạng thái</div>
                                            <div class="d-flex justify-content-around">
                                                <div>
                                                    <div class="d-inline-block" style="width: 15px; height: 15px; background-color: #17a2b8;"></div>
                                                    <span> Mới</span>
                                                </div>
                                                <div>
                                                    <div class="d-inline-block" style="width: 15px; height: 15px; background-color: #007bff;"></div>
                                                    <span> Đang thực hiện</span>
                                                </div>
                                                <div>
                                                    <div class="d-inline-block" style="width: 15px; height: 15px; background-color: #28a745;"></div>
                                                    <span> Hoàn thành</span>
                                                </div>
                                                <div>
                                                    <div class="d-inline-block" style="width: 15px; height: 15px; background-color: #6c757d;"></div>
                                                    <span> Hủy</span>
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </sheet>
            </form>
        </field>
    </record>

    <!-- Dashboard Action -->
    <record id="action_dpt_job_report_dashboard" model="ir.actions.act_window">
        <field name="name">Bảng điều khiển báo cáo</field>
        <field name="res_model">dpt.job.report</field>
        <field name="view_mode">kanban,tree,form</field>
        <field name="view_id" ref="view_dpt_job_report_dashboard"/>
        <field name="search_view_id" ref="view_dpt_job_report_search"/>
        <field name="context">{'search_default_my_reports': 1}</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                Tạo báo cáo công việc đầu tiên của bạn!
            </p>
            <p>
                Báo cáo công việc giúp bạn theo dõi và quản lý công việc một cách hiệu quả.
            </p>
        </field>
    </record>
    
    <!-- New Overview Dashboard Action -->
    <record id="action_dpt_job_report_overview" model="ir.actions.act_window">
        <field name="name">Báo cáo tổng quan</field>
        <field name="res_model">dpt.job.report</field>
        <field name="view_mode">form</field>
        <field name="view_id" ref="view_dpt_job_report_overview_dashboard"/>
        <field name="context">{'search_default_my_reports': 1}</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                Không có báo cáo nào!
            </p>
            <p>
                Tạo báo cáo công việc để xem thống kê tổng quan.
            </p>
        </field>
    </record>

    <!-- Dashboard Menu Item -->
    <menuitem id="menu_dpt_job_report_dashboard"
              name="Bảng điều khiển"
              parent="menu_dpt_job_report_root"
              action="action_dpt_job_report_dashboard"
              sequence="1"/>
              
    <!-- Overview Dashboard Menu Item -->
    <menuitem id="menu_dpt_job_report_overview"
              name="Báo cáo tổng quan"
              parent="menu_dpt_job_report_root"
              action="action_dpt_job_report_overview"
              sequence="2"/>
</odoo> 