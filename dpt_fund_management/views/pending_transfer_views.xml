<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>

        <!-- Tree View -->
        <record id="view_dpt_pending_transfer_tree" model="ir.ui.view">
            <field name="name">dpt.pending.transfer.tree</field>
            <field name="model">dpt.pending.transfer</field>
            <field name="arch" type="xml">
                <tree decoration-warning="is_overdue == True" decoration-success="state == 'received'" decoration-danger="state == 'lost'">
                    <field name="name"/>
                    <field name="transfer_id"/>
                    <field name="amount"/>
                    <field name="currency_id"/>
                    <field name="date_sent"/>
                    <field name="expected_date"/>
                    <field name="days_pending"/>
                    <field name="is_overdue"/>
                    <field name="state"/>
                </tree>
            </field>
        </record>

        <!-- Form View -->
        <record id="view_dpt_pending_transfer_form" model="ir.ui.view">
            <field name="name">dpt.pending.transfer.form</field>
            <field name="model">dpt.pending.transfer</field>
            <field name="arch" type="xml">
                <form string="Tiền đang chuyển">
                    <header>
                        <button name="action_mark_received" string="Đánh dấu đã nhận" type="object" class="btn-success" invisible="state != 'pending'"/>
                        <button name="action_mark_lost" string="Đánh dấu mất tiền" type="object" class="btn-danger" invisible="state != 'pending'" confirm="Bạn có chắc chắn muốn đánh dấu mất tiền này?"/>
                        <field name="state" widget="statusbar" statusbar_visible="pending,received"/>
                    </header>
                    <sheet>
                        <div class="alert alert-warning" role="alert" invisible="not is_overdue">
                            <strong>Cảnh báo:</strong> Tiền chuyển đã quá hạn <field name="days_pending" readonly="1"/> ngày!
                        </div>

                        <div class="oe_title">
                            <label for="name" class="oe_edit_only"/>
                            <h1><field name="name"/></h1>
                        </div>

                        <group>
                            <group>
                                <field name="transfer_id" readonly="1"/>
                                <field name="amount" readonly="1"/>
                                <field name="currency_id" readonly="1"/>
                            </group>
                            <group>
                                <field name="date_sent" readonly="1"/>
                                <field name="expected_date" readonly="1"/>
                                <field name="date_received" readonly="1"/>
                                <field name="days_pending" readonly="1"/>
                                <field name="is_overdue" readonly="1"/>
                            </group>
                        </group>

                        <group string="Thông tin ngân hàng">
                            <group>
                                <field name="bank_reference"/>
                                <field name="bank_fee"/>
                            </group>
                        </group>

                        <field name="notes" placeholder="Ghi chú..."/>
                    </sheet>
                    <div class="oe_chatter">
                        <field name="message_follower_ids"/>
                        <field name="activity_ids"/>
                        <field name="message_ids"/>
                    </div>
                </form>
            </field>
        </record>

        <!-- Search View -->
        <record id="view_dpt_pending_transfer_search" model="ir.ui.view">
            <field name="name">dpt.pending.transfer.search</field>
            <field name="model">dpt.pending.transfer</field>
            <field name="arch" type="xml">
                <search>
                    <field name="name"/>
                    <field name="transfer_id"/>
                    <field name="currency_id"/>
                    <field name="date_sent"/>
                    <separator/>
                    <filter string="Đang chuyển" name="pending" domain="[('state', '=', 'pending')]"/>
                    <filter string="Đã nhận" name="received" domain="[('state', '=', 'received')]"/>
                    <filter string="Mất tiền" name="lost" domain="[('state', '=', 'lost')]"/>
                    <filter string="Đã hủy" name="cancelled" domain="[('state', '=', 'cancelled')]"/>
                    <separator/>
                    <filter string="Quá hạn" name="overdue" domain="[('is_overdue', '=', True)]"/>
                    <filter string="Trong hạn" name="on_time" domain="[('is_overdue', '=', False)]"/>
                    <separator/>
                    <filter string="Hôm nay" name="today" domain="[('date_sent', '=', context_today().strftime('%Y-%m-%d'))]"/>
                    <filter string="Tuần này" name="this_week" domain="[('date_sent', '&gt;=', (context_today() - datetime.timedelta(days=context_today().weekday())).strftime('%Y-%m-%d'))]"/>
                    <filter string="Tháng này" name="this_month" domain="[('date_sent', '&gt;=', context_today().strftime('%Y-%m-01'))]"/>
                    <group expand="0" string="Nhóm theo">
                        <filter string="Trạng thái" name="group_state" context="{'group_by': 'state'}"/>
                        <filter string="Tiền tệ" name="group_currency" context="{'group_by': 'currency_id'}"/>
                        <filter string="Ngày gửi" name="group_date_sent" context="{'group_by': 'date_sent'}"/>
                        <filter string="Ngày dự kiến" name="group_expected" context="{'group_by': 'expected_date'}"/>
                    </group>
                </search>
            </field>
        </record>

        <!-- Kanban View -->
        <record id="view_dpt_pending_transfer_kanban" model="ir.ui.view">
            <field name="name">dpt.pending.transfer.kanban</field>
            <field name="model">dpt.pending.transfer</field>
            <field name="arch" type="xml">
                <kanban default_group_by="state">
                    <field name="name"/>
                    <field name="amount"/>
                    <field name="currency_id"/>
                    <field name="date_sent"/>
                    <field name="expected_date"/>
                    <field name="days_pending"/>
                    <field name="is_overdue"/>
                    <field name="state"/>
                    <templates>
                        <t t-name="kanban-box">
                            <div t-attf-class="oe_kanban_card oe_kanban_global_click #{record.is_overdue.raw_value ? 'oe_kanban_color_2' : ''}">
                                <div class="oe_kanban_content">
                                    <div class="o_kanban_record_top">
                                        <div class="o_kanban_record_headings">
                                            <strong class="o_kanban_record_title"><t t-esc="record.name.value"/></strong>
                                        </div>
                                        <div class="o_kanban_record_subtitle">
                                            <t t-esc="record.amount.value"/> <t t-esc="record.currency_id.value"/>
                                        </div>
                                    </div>
                                    <div class="o_kanban_record_body">
                                        <div>Ngày gửi: <t t-esc="record.date_sent.value"/></div>
                                        <div>Dự kiến: <t t-esc="record.expected_date.value"/></div>
                                        <div>Số ngày: <t t-esc="record.days_pending.value"/></div>
                                        <div t-if="record.is_overdue.raw_value" class="text-danger">
                                            <i class="fa fa-exclamation-triangle"/> Quá hạn
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </t>
                    </templates>
                </kanban>
            </field>
        </record>

        <!-- Action -->
        <record id="action_dpt_pending_transfer" model="ir.actions.act_window">
            <field name="name">Tiền đang chuyển</field>
            <field name="res_model">dpt.pending.transfer</field>
            <field name="view_mode">kanban,tree,form</field>
            <field name="context">{'search_default_pending': 1}</field>
            <field name="help" type="html">
                <p class="o_view_nocontent_smiling_face">
                    Chưa có tiền đang chuyển!
                </p>
                <p>
                    Theo dõi các khoản tiền đang trong quá trình chuyển giữa các quỹ.
                </p>
            </field>
        </record>

    </data>
</odoo>
